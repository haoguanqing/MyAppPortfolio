<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_background">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView android:text="@string/welcome_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_white"
            style="@style/TextAppearance.AppCompat.Headline" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/gridLayout"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dip"
                android:text="@string/spotify_streamer"
                android:id="@+id/spotifyButton"
                android:layout_gravity="center"
                android:background="@color/button_background"
                android:textColor="@color/text_white"
                android:onClick="sendMsg"
                style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:text="@string/scores_app"
                android:id="@+id/scoresButton"
                android:layout_gravity="center"
                android:background="@color/button_background"
                android:textColor="@color/text_white"
                android:onClick="sendMsg"
                style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:layout_row="0"
                android:layout_column="1" />

            <Button
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:layout_marginRight="30dip"
                android:text="Library App"
                android:id="@+id/libraryButton"
                android:layout_gravity="center"
                android:background="@color/button_background"
                android:textColor="@color/text_white"
                android:onClick="sendMsg"
                style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:layout_row="1"
                android:layout_column="0" />

            <Button
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:layout_marginLeft="30dip"
                android:text="@string/build"
                android:id="@+id/buildButton"
                android:layout_gravity="center"
                android:background="@color/button_background"
                android:textColor="@color/text_white"
                android:onClick="sendMsg"
                style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:layout_row="1"
                android:layout_column="1" />

            <Button
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:layout_marginRight="30dip"
                android:text="@string/xyz_reader"
                android:id="@+id/xyzButton"
                android:layout_gravity="center"
                android:background="@color/button_background"
                android:textColor="@color/text_white"
                android:onClick="sendMsg"
                style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:layout_row="2"
                android:layout_column="0" />

            <Button
                android:layout_width="180dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:layout_marginLeft="30dip"
                android:text="@string/capstone"
                android:id="@+id/capstoneButton"
                android:layout_gravity="center"
                android:background="@color/button_background2"
                android:textColor="@color/text_white"
                android:onClick="sendMsg"
                style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
                android:layout_row="2"
                android:layout_column="1" />

        </GridLayout>
    </LinearLayout>

</RelativeLayout>
